{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "ignorePatterns": ["/src/wavesurfer.js"],
  "env": {
    "browser": true,
    "commonjs": true
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prop-types": "off",
    "allowForLoopAfterthoughts": 1,
    "prettier/prettier": [
      "error",
      {
        "printWidth": 100,
        "semi": true,
        "useTabs": false,
        "tabWidth": 2,
        "trailingComma": "none",
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "singleQuote": true
      }
    ],
    "no-console": "warn"
  }
}
